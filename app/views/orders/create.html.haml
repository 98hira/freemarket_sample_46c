= render "devise/shared/login-header"

.ib-content
  %h2.ib-content__title
    = "商品購入に#{@MESSAGE}しました。"
  %section.ib-content__item
    .ib-content__item-inner
      = form_with url:root_path, local:true, html: {class: "ib-content__item-inner__form"} do |f|
        = f.submit "TOPヘ戻る", class: "ib-content__item-inner__form-submit"

= render "devise/shared/login-footer"
